  <body>
    <% include partials/_navbar.ejs %>
    <h1>Add POI</h1>

  <div class="flex-container">
    <div>
      <input id="pac-input" class="controls" type="text" placeholder="Search Box">
      <div id="map"></div>
      <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAYFKtQIeixhpaOG8c72kkrb9ZN9L-ccIc&libraries=places&callback=initAutocomplete" async defer></script>
    </div>

    <div>
      <form id='new-poi-form' action='/maps/<%=mapid%>/newpoi' method='POST'>

        <div class="form-group form-hide">
          <label for="gps-lat">GPS-lat</label>
          <input id='gps-lat' type="text" class="form-control" placeholder="gps-lat" name='gps-lat' required>
        </div>
        <div class="form-group form-hide">
          <label for="gps-lng">GPS-lng</label>
          <input id='gps-lng' type="text" class="form-control" placeholder="gps-lng" name='gps-lng' required>
        </div>
        <div class="form-group form-hide">
          <label for="placeid">place_id</label>
          <input id='placeid' type="text" class="form-control" placeholder="placeid" name='placeid'>
        </div>


        <div class="form-group">
          <label for="poiTitle">Title</label>
          <input type="text" class="form-control" id="poi-title"  placeholder="POI title" name='title'>
        </div>
        <div class="form-group">
          <label for="mapDescription">Description</label>
          <textarea class="form-control" rows="3" placeholder="Tell us about this POI" name='description' maxlength="255"></textarea>
        </div>


