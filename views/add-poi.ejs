        <div class="form-group">
          <label for="poi-address">Address</label>
          <input id="poi-address" type="text" class="form-control" placeholder="address" name='address'>
        </div>

        <div class="form-group">
          <label for="image">Image</label>
          <input id='image' type="text" class="form-control" placeholder="image link" name='image'>
        </div>

        <button type="submit" class="btn btn-default">Add</button>
      </form>
    </div>


